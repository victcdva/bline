<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground">

    <TextView
        android:id="@+id/bienvenida"
        style="@style/WelcomeText"/>

    <TextView
        android:id="@+id/nombreHome"
        style="@style/nombreHome"/>

    <ImageView
        android:id="@+id/serviceprovider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nombreHome"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/serviceprovider" />

    <ImageView
        android:id="@+id/enespera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/enespera"
        android:layout_toRightOf="@id/serviceprovider"
        android:layout_marginTop="159dp"
        android:layout_marginLeft="5dp"/>

    <Button
        android:id="@+id/visitasrecientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/visitasrecientes"
        android:layout_below="@id/serviceprovider"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/historial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/historial"
        android:layout_below="@id/enespera"
        android:layout_toRightOf="@id/visitasrecientes"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="6dp"/>

</RelativeLayout>